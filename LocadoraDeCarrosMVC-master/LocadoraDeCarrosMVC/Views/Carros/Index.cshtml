@model IEnumerable<LocadoraDeCarrosMVC.Models.Carro>

@{
    ViewData["Title"] = "Carros Cadastrados";
}

<h1 class="mt-3">Carros Cadastrados</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novo Carro</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th>Preço da Diária</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Marca</td>
                <td>@item.Modelo</td>
                <td>@item.Ano</td>
                <td>R$ @item.PrecoDiaria.ToString("N2")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
